{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "noImplicitThis": false,
        "allowJs": false,
        "baseUrl": "./",
        "paths": {
            "@views/*": ["./src/views/*"],
            "@router/*": ["./src/router/*"],
            "@js/*": ["src/assets/js/*"],
            "@css/*": ["src/assets/css/*"],
            "@img/*": ["src/assets/img/*"],
            "@api/*": ["src/api/*"],
            "@store/*": ["src/store/*"]
        },
        "types": ["element-plus/global"]
    },
    "include": [
        "src/**/*.ts",
        "src/type/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
